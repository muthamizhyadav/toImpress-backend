			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"code\": \"SAVE20\",\n  \"discount\": 20,\n  \"type\": \"percentage\",\n  \"couponFor\": \"minPurchase\",\n  \"minPurchaseAmount\": 500,\n  \"isActive\": true,\n  \"maxUsage\": 100\n}"
				},
				"url": {
					"raw": "{{base_url}}/v1/coupons",
